= form_for @specialty do |f|
  - if @specialty.errors.any?
    #error_explanation
      %h2= "#{pluralize(@specialty.errors.count, "error")} prohibited this specialty from being saved:"
      %ul
        - @specialty.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :spec_id
    = f.number_field :spec_id
  .field
    = f.label :spec_name
    = f.text_field :spec_name
  .field
    = f.label :spec_type
    = f.number_field :spec_type
  .field
    = f.label :spec_mode
    = f.number_field :spec_mode
  .actions
    = f.submit 'Save'
