= form_for @specialty do |f|
  - if @specialty.errors.any?
    #error_explanation
      %h2= "#{pluralize(@specialty.errors.count, "error")} prohibited this specialty from being saved:"
      %ul
        - @specialty.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :spec_id
    = f.number_field :spec_id
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :type
    = f.number_field :type
  .field
    = f.label :mode
    = f.number_field :mode
  .actions
    = f.submit 'Save'
