%h1 Listing specialties

= form_tag(specialties_path, method: :get) do

  %table
    %thead
      %tr
        %th{colspan:2}
          Наименование или код направления подготовки:
          =text_field_tag('full_direction', '')
      %tr
        %th
          Уровень подготовки:
          бакалавриат
          =check_box_tag('level', '0')
        %th
          специалитет
          =check_box_tag('level', '2')
        %th
          магистратура
          =check_box_tag('level', '1')
      %tr
        %th
          Форма обучения:
          очная
          =radio_button_tag('study_form', '0')
        %th
          очно-заочная
          =radio_button_tag('study_form', '1')
      %tr
        %th{colspan:5}
          =submit_tag('Искать')
      %tr
        %th Human dtype
        %th Full direction
        %th Human level
        %th Human study form
        %th
        %th
        %th
      


    %tbody
      - @specialties.each do |specialty|
        %tr
          %td= specialty.human_dtype
          %td= specialty.full_direction
          %td= specialty.human_level
          %td= specialty.human_study_form
          %td= link_to 'Show', specialty
          %td= link_to 'Edit', edit_specialty_path(specialty)
          %td= link_to 'Destroy', specialty, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Specialty', new_specialty_path
